<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_launcher"
    app:startDestination="@id/launcherFragment">

    <fragment
        android:id="@+id/launcherFragment"
        android:name="ru.khozyainov.rddt.ui.launcher.LauncherFragment"
        android:label="LauncherFragment"
        tools:layout="@layout/logo">
        <action
            android:id="@+id/action_launcherFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/launcherFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_launcherFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/launcherFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/exceptionFragment"
        android:name="ru.khozyainov.rddt.ui.exception.ExceptionFragment"
        android:label="ExceptionFragment"
        tools:layout="@layout/fragment_exception" >
        <argument
            android:name="sourceFragmentId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        tools:layout="@layout/item_onboarding"
        android:name="ru.khozyainov.rddt.ui.onboarding.OnboardingFragment"
        android:label="OnboardingFragment" >
        <action
            android:id="@+id/action_onboardingFragment_to_launcherFragment"
            app:destination="@id/launcherFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        tools:layout="@layout/fragment_login"
        android:name="ru.khozyainov.rddt.ui.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_launcherFragment"
            app:destination="@id/launcherFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>